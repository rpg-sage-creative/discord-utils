{
	"name": "@rsc-utils/discord-utils",
	"version": "0.4.2",
	"license": "LGPL-3.0-or-later",
	"main": "build/index.js",
	"type": "module",
	"scripts": {
		"build": "bash ./node_modules/@rsc-utils/core-utils/scripts/sh/build.sh",
		"release": "bash ./node_modules/@rsc-utils/core-utils/scripts/sh/release.sh",
		"test": "bash ./node_modules/@rsc-utils/core-utils/scripts/sh/test.sh --detectOpenHandles",
		"test-todos": "bash ./node_modules/@rsc-utils/core-utils/scripts/sh/create-test-js.sh",
